# Development Environment Configuration
# Copy this file to .env for local development
#
# This file contains development-specific settings for running locally

# =================================================================
# APPLICATION SETTINGS
# =================================================================

# Runtime environment
NODE_ENV=development

# Server configuration
PORT=5050

# Logging (debug for development)
LOG_LEVEL=debug

# Database configuration (use JSON files for development)
USE_DB=false
DB_KIND=json

# =================================================================
# AZURE SERVICES (for testing Azure integrations locally)
# =================================================================

# Azure OpenAI Configuration (optional for local testing)
# AZURE_OPENAI_KEY=your-development-key-here
# AZURE_OPENAI_URI=https://your-dev-openai-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# =================================================================
# CORS AND SECURITY
# =================================================================

# Allowed origins for CORS (development URLs)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =================================================================
# DEVELOPMENT DATABASE (if USE_DB=true)
# =================================================================

# Local PostgreSQL for testing database integration
# DATABASE_URL=postgresql://postgres:password@localhost:5432/wonder_dev

# =================================================================
# TESTING SETTINGS
# =================================================================

# Playwright test configuration
PLAYWRIGHT_TEST_URL=http://localhost:5173
PLAYWRIGHT_API_URL=http://localhost:5050

# Test data settings
TEST_DATA_PATH=./packages/gateway/src/data/nurses.json

# =================================================================
# OPTIONAL DEVELOPMENT TOOLS
# =================================================================

# Enable development features
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_DATA=true
ENABLE_CORS_ALL_ORIGINS=true

# Performance monitoring (optional)
# ENABLE_PERFORMANCE_MONITORING=false