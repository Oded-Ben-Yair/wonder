# Azure Production Environment Configuration
# Copy this file to .env when deploying to Azure Container Apps
#
# These values will be populated from Azure Key Vault in production
# Local development should use .env with localhost configurations

# =================================================================
# APPLICATION SETTINGS
# =================================================================

# Runtime environment
NODE_ENV=production

# Server configuration
PORT=5050

# Logging
LOG_LEVEL=info

# Database configuration
USE_DB=true
DB_KIND=postgres
DATABASE_URL=<populated-from-key-vault>

# =================================================================
# AZURE SERVICES
# =================================================================

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=<populated-from-key-vault>
AZURE_OPENAI_URI=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=<populated-from-key-vault>

# =================================================================
# CORS AND SECURITY
# =================================================================

# Allowed origins for CORS (production URLs)
ALLOWED_ORIGINS=https://your-static-web-app.azurestaticapps.net

# =================================================================
# OPTIONAL SETTINGS
# =================================================================

# Custom domain (if configured)
CUSTOM_DOMAIN=

# Additional Azure service endpoints
# AZURE_STORAGE_CONNECTION_STRING=<populated-from-key-vault>
# AZURE_SERVICE_BUS_CONNECTION_STRING=<populated-from-key-vault>

# =================================================================
# DEPLOYMENT METADATA
# =================================================================

# These are set automatically by CI/CD pipeline
# AZURE_REGION=eastus
# DEPLOYMENT_VERSION=
# BUILD_ID=
# COMMIT_SHA=